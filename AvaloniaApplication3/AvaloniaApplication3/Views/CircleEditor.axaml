<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:AvaloniaApplication3.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication3.Views.CircleEditor"
             x:DataType="models:CircleModel">
    <StackPanel>
        <TextBlock Text="Радиус"/>
        <NumericUpDown Value="{Binding Radius}" Minimum="0" Maximum="700" Increment="25"/>
        <TextBlock Text="Горизонтальная компрессия"/>
        <NumericUpDown Value="{Binding HorizontalCompression}" Minimum="0" Maximum="10" Increment="1"/>
        <TextBlock Text="Вертикальная компрессия"/>
        <NumericUpDown Value="{Binding VerticalCompression}" Minimum="0" Maximum="10" Increment="1"/>
    </StackPanel>
</UserControl>